<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#778899"
    tools:context=".Page1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="183dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="546dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/disneyland_logo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="415dp"
        android:layout_height="43dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="6dp"
        android:background="#213F8F"
        android:text="Application Disneyland - 2023"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="9dp"
        android:text="Comment trouvez-vous l'affluence dans les parcs ?"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/idAffluence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="8dp"
        android:text="Votre avis sur la diversité entre les parcs ?"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/idDiversite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idAffluence" />

    <RadioGroup
        android:id="@+id/idAffluence"
        android:layout_width="233dp"
        android:layout_height="96dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="17dp"
        android:background="#213F8F"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <RadioButton
            android:id="@+id/idAffluence1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assez peu d'affluence"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/idAffluence2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Un peu d'affluence"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/idAffluence3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trop d'affluence"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/idDiversite"
        android:layout_width="233dp"
        android:layout_height="99dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="27dp"
        android:background="#213F8F"
        app:layout_constraintBottom_toTopOf="@+id/idSuivant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <RadioButton
            android:id="@+id/idDiversite1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Les parcs sont différents"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/idDiversite2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Les parcs se ressemblent un peu"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/idDiversite3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Les parcs sont identiques"
            android:textColor="#FFFFFF" />

    </RadioGroup>

    <Button
        android:id="@+id/idSuivant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="20dp"
        android:text="Suivant"
        android:background="#213F8F"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idDiversite" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="193dp"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="16dp"
        android:text="1/4"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSuivant" />
</androidx.constraintlayout.widget.ConstraintLayout>