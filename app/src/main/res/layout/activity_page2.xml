<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#778899"
    tools:context=".Page1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="411dp"
        android:layout_height="183dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="546dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/disneyland_logo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="415dp"
        android:layout_height="43dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="6dp"
        android:background="#213F8F"
        android:text="Application Disneyland - 2023"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="9dp"
        android:text="Comment avez-vous trouvez les attractions ?"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/idEntretien"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="8dp"
        android:text="L'attente aux attractions était :"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/idAttente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idEntretien" />

    <RadioGroup
        android:id="@+id/idEntretien"
        android:layout_width="231dp"
        android:layout_height="138dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="17dp"
        android:background="#213F8F"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <RadioButton
            android:id="@+id/idEntretien1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Très bien entretenues"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/idEntretien2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moyennement entretenues"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/idEntretien3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gros manque d'entretien"
            android:textColor="#FFFFFF" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/idAttente"
        android:layout_width="231dp"
        android:layout_height="138dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="27dp"
        android:background="#213F8F"
        app:layout_constraintBottom_toTopOf="@+id/idSuivant2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12">

        <RadioButton
            android:id="@+id/idAttente1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Très satisfaisante"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/idAttente2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Satisfaisante"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/idAttente3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insatisfaisante"
            android:textColor="#FFFFFF" />

    </RadioGroup>

    <Button
        android:id="@+id/idSuivant2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="20dp"
        android:text="Suivant"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idAttente" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="193dp"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="16dp"
        android:text="2/4"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idSuivant2" />
</androidx.constraintlayout.widget.ConstraintLayout>